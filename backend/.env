# Claude Code Web Backend Configuration
#
# Create .env.local to override these values with your secrets.
# .env.local is gitignored and will not be committed.

# Server port
PORT=3000

# Authentication password (required - set in .env.local)
AUTH_PASSWORD=changeme123

# Anthropic API Key (required - set in .env.local)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Claude model to use
CLAUDE_MODEL=claude-sonnet-4-20250514

# Enable extended thinking (optional)
ENABLE_THINKING=false

# Default working directory
WORK_DIR=/home/camus/work

# Session storage directory
SESSION_STORAGE_DIR=./sessions

# Tool permissions (comma-separated)
# ALLOWED_TOOLS=read_file,write_file
# ASK_USER_TOOLS=bash_command
# DENIED_TOOLS=git_push

# Log level (debug, info, warn, error)
LOG_LEVEL=info
