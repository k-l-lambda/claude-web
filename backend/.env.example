# Configuration
PORT=3000
NODE_ENV=development

# Authentication
AUTH_PASSWORD=change_this_password

# Claude API
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_BASE_URL=https://api.anthropic.com
CLAUDE_MODEL=claude-sonnet-4-5-20250929
ENABLE_THINKING=true

# File System
WORK_DIR=/home/user/projects
ALLOW_PATH_TRAVERSAL=false

# Session Storage
SESSION_STORAGE_DIR=.claude-web/sessions
SESSION_TIMEOUT_MINUTES=60

# Tool Permissions (comma-separated)
ALLOWED_TOOLS=read_file,write_file,edit_file,glob,grep,bash_command,git_status,git_diff
ASK_USER_TOOLS=bash_command,git_commit
DENIED_TOOLS=git_push

# Bash Command Restrictions
BASH_TIMEOUT_SECONDS=30
BASH_MAX_OUTPUT_SIZE=1048576

# Logging
LOG_LEVEL=info
LOG_DIR=.claude-web/logs
